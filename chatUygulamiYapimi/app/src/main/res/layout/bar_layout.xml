<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar"
   >
    <TextView
        android:layout_width="wrap_content"
        android:text="Anonim Chat"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/fon"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>
<RelativeLayout
    android:layout_gravity="end"
    android:layout_marginRight="15dp"
    android:visibility="invisible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bar_layout_relaNotif">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_notif"
        android:layout_height="wrap_content"
        android:id="@+id/bar_layout_imgNotif"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:layout_marginRight="6dp"
        android:layout_alignBottom="@+id/bar_layout_imgNotif"
        android:layout_alignRight="@+id/bar_layout_imgNotif"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:id="@+id/bar_layout_txtBildirimSayisi"

        />
</RelativeLayout>
</androidx.appcompat.widget.Toolbar>